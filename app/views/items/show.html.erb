<script>
    $(document).ready(function(){
        $('.carousel').carousel({
            interval: 0
        });
    });
</script>
<table style="width: 100%;">
  <ul class="breadcrumb">
    <li><a href="#">Home</a> <span class="divider">/</span></li>
    <li><a href="#"><%= @category.title %></a> <span class="divider">/</span></li>
    <li class="active"><%= @item.title %></li>
  </ul>
  <tr>
    <td style="width: 30%;">
      <div id="myCarousel" class="carousel slide" style="vertical-align: middle;">
        <div class="carousel-inner">
          <% @item.item_images.each do |image| %>
            <% if image == @item.item_images.first %>
              <!-- Carousel active item -->
              <div class="active item"><%= image_tag(image.asset.url(:original)) %></div>
            <% else %>
              <!-- Carousel items -->
              <div class="item"><%= image_tag(image.asset.url(:original)) %></div>
            <% end %>
          <% end %>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
      </div>
    </td>
    <td style="width: 40%;">
      <div class="breadcrumb" style="height: 260px;">
        <h2><%= @item.display_title %></h2>
        <small>(Quantity:<%= @item.quantity %>)</small>
        <br><br>
        <!--Shows the bid end date as words using the function below-->
        <span class="label label-inverse" style="font-size: 14px;">Bidding ends in <%= distance_of_time_in_words_to_now(@item_end_date) %>!</span>
        <% if @item.current_bid >= 0   %>
            <!--TODO: [ <= @item.bids %> bids ]-->
            <br><br>
            <h5>Bidding History: [ <a href = "example.com">3 bids</a> ]</h5>
            <br>
            <h5>Current Bid: $<%= @item.current_bid %></h5>
            <!--Button for placing bid-->
            <%= form_tag({:controller => "items", :action => "place_bid", :id=> @item.id }, :class => "simple") do %>
                <%= text_field_tag "current_bid","Minimum bid is $" + @item.minimum_bid_price.to_s%>
              <button type="submit" class="btn btn-success">Bid</button>
                <% end %>
        <% end %>
        <% if @item.buy_price > 0   %>
            <!--If buy it now is enabled, show the button to buy it now-->
            <%= form_tag({:controller => "items", :action => "buy_now", :id => @item.id}, :class => "simple") do %>
                <button class="btn btn-warning buy-now-button">Buy Now for $<%= @item.buy_price %>!</button>
            <% end %>
        <% end %>
      </div>
    </td>
    <td style="width: 30%;">
      <div class="breadcrumb" style="height: 260px;">
      <br>
      <h5>Seller information:
        <!--TODO: Add seller username when creating a new item-->
      <a href="example.com">gerryCool68</a></h5>
        <!--TODO: Add seller rating to migration-->
        <!--<TODO: (1..@seller.rating).each do %>-->
        <br>
        <!--<= TODO: @seller.items_sold %> -->
        [ 3 items sold ]
          </div>
    </td>
  </tr>
</table>
